<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
 
    <constant name="struts.devMode" value="true" />
 
    <package name="basicstruts2" extends="struts-default">
 
        <interceptors>
            <!-- interceptor personalizado -->
            <!--<interceptor name="miInterceptor" class="bla.foo.MiInterceptorClass"></interceptor>-->
            <!-- Pila de interceptores personalizada -->
            <interceptor-stack name="miPiladeFiltros">
                <interceptor-ref name="timer"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        
        <action name="index">
            <result>/index.jsp</result>
        </action>
        
		<action name="form" class="curso.jee.action.FormularioAction" method="execute">    
		    <interceptor-ref name="miPiladeFiltros"/>
		    <result name="success">/salidaform.jsp</result>
        </action>
        
    </package>
 
</struts>